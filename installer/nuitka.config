# ============================================
# Nuitka Build Configuration for LocalHub v2
# ============================================

[main]
# The main entry file
script = main.py

# Output mode
onefile = true
standalone = true
windows-disable-console = true

# Optional: Enable icon
windows-icon-from-ico = icon.ico

# Plugins
enable-plugins = tk-inter,multiprocessing

# Include the assets directory
include-data-dir = assets=assets

# Follow all imports automatically
follow-imports = true

# Remove debugging + optimize binary
lto = true
show-progress = true
nofollow-imports = false

# Reduce size
assume-yes-for-downloads = true
static-libpython = yes


